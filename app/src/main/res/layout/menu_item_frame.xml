<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/xx_small">

    <FrameLayout
        android:layout_width="@dimen/icon_size_standard"
        android:layout_height="@dimen/icon_size_standard">

        <ImageView
            android:id="@+id/bg_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="@dimen/icon_size_normal"
            android:layout_height="@dimen/icon_size_normal"
            android:layout_gravity="center"
            android:background="@drawable/roundedview"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="@dimen/icon_size_standard"
        android:layout_height="@dimen/icon_size_standard"
        android:layout_marginTop="@dimen/xx_small">

        <ImageView
            android:id="@+id/bg_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="@dimen/icon_size_normal"
            android:layout_height="@dimen/icon_size_normal"
            android:layout_gravity="center"
            android:background="@drawable/roundedview" />
    </FrameLayout>

</LinearLayout>